@model ThemeApplyPractice.Models.Issuance

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Create Issuance</h6>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mb-2">
                        <label asp-for="IssueDate" class="control-label col-sm-3"></label>
                        <div class="col-sm-9">
                            <input type="date" asp-for="IssueDate" class="form-control" />
                            <span asp-validation-for="IssueDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label asp-for="Product" class="control-label col-sm-3"></label>
                        <div class="col-sm-9">
                            <select asp-for="ProductId" asp-items="@(new SelectList(ViewBag.ProductList,"Value","Text"))" class="form-control">
                            </select>
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label asp-for="Employee" class="control-label col-sm-3"></label>
                        <div class="col-sm-9">
                            <select asp-for="EmployeeId" asp-items="@(new SelectList(ViewBag.EmployeeList,"Value","Text"))" class="form-control">
                            </select>
                            <span asp-validation-for="Employee" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label asp-for="Qty" class="control-label col-sm-3"></label>
                        <div class="col-sm-9">
                            <input asp-for="Qty" class="form-control" />
                            <span asp-validation-for="Qty" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
                <div>
                    <a asp-action="Display">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>




