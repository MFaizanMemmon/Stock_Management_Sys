@model IEnumerable<ThemeApplyPractice.Models.Employee>

@{
    ViewData["Title"] = "Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-secondary rounded h-100"> 
    <h6>Employee List</h6>
    <p>
        <a asp-action="Create" class="btn btn-primary rounded-pill m-2">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeName)
                </th>
                <th>
                    Operation
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-success">Edit</a> |
                        <a asp-action="Detail" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-info">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-warning">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


