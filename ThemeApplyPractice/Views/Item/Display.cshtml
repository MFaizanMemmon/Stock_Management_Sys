@model IEnumerable<ThemeApplyPractice.Models.Product>

@{
    ViewData["Title"] = "Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="bg-secondary rounded h-100 p-4">
    <h6 class="mb-4">Product List</h6>
    <p>
        <a asp-action="Create" asp-controller="Item" class="btn btn-primary rounded-pill m-2">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Product Name")
                </th>
                <th>
                    @Html.DisplayName("Status")
                </th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="p-1">
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Item" asp-route-id="@item.ProductId" class="btn btn-sm btn-success">Edit</a> |
                        <a asp-action="Detail" asp-route-id="@item.ProductId" class="btn btn-sm btn-info ">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
